<!DOCTYPE html>

<html lang="ko" class="default-style layout-fixed layout-navbar-fixed">

    <head>
        <%- include('../_layouts/header')-%>
        
        <style>

        </style>
    </head>

    <body>
        <%- include('../_layouts/layout_bodystart') -%>
        <div class="app header footer">
            <%-include('../_parts/_header')%>
            <!-- Content -->

            <div class="d-flex flex-column pt-3" style="background-color: #f1f1f1;">
                <div class="search-category-area">
                    <div class="d-flex mt-2 ml-3 mr-3 justify-content-between">
                        <div class="search-category-title2"><%= __('SEARCH_ALL_HASHTAG')%></div>
                        <div><span onclick="goBack()" class="icon-x searchword-remove"></span></div>
                    </div>
                    <div class="d-flex flex-row flex-wrap mt-1 mb-1 ml-3 mr-3">
                        <% for  (var x=0 ; x<hashlist.length; x++  ) { %>
                        <span onclick="onClickHash('<%= hashlist[x].text  %>')" class="search-gray">#<%= hashlist[x].text  %> (<%= hashlist[x].count  %>)</span>
                        <%  } %>
                    </div>
                </div>
            </div>
            <div>

            </div>
        </div>
        <%- include('../_layouts/layout_bodyscript') -%>

        <!-- Content -->

        <%- include('../_parts/_footer') -%>

        <script type="text/javascript">

            (function () {
                setHeader('back','')
            })();

            var onClickHash = (txt) => {
                location.href="/search/index/s/"+moment().valueOf()+"?target="+txt;
            }
        </script>
        <%- include('../_layouts/layout_bodyend') -%>
    </body>

</html>