            function onprofilePhoto($this, type) {
                if(!(<%= _isInApp %>)) {
                    onPopup("alert", "<%= __('AUTH_PROFILEINAPP')%>", function(cb){ });
                } else {
                    phototype = type;
                    blockPage();
