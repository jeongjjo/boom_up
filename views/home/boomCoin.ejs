            function onProfileTap($this, type) {
                if(isBlocked) return

                $("[id^=tap_]").removeClass("nprofile-category-highlight");
                $($this).addClass("nprofile-category-highlight");
                blockPage();
                switch(type) {
                    case "post":
                        isTap = "post";
